doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/public/stylesheets/bootstrap.min.css')
    link(rel='shortcut icon' href='/favicon.ico')
  body
    div.container
      nav.navbar.navbar-light(style="background-color: #a17188")
        a.navbar-brand(style="color: #ffffff")= "raresnaps"
      hr
    if errors
      div.container
        each error in errors
          div.alert.alert-danger= error.msg
    if sessionFlash && sessionFlash.length > 0
      div.container
        each flash in sessionFlash
          div.alert(class=flash.type)= flash.message
    div.container
    block content
